{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:{{ACCOUNT_ID}}:table/${{ values.tableName }}",
        "arn:aws:dynamodb:*:{{ACCOUNT_ID}}:table/${{ values.tableName }}/index/*"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "arn:aws:logs:*:{{ACCOUNT_ID}}:log-group:/aws/lambda/${{ values.functionName }}:*"
    }
  ]
}