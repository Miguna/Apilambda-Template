{
  "info": {
    "name": "${{ values.projectName | title }} API",
    "description": "${{ values.description }}",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3002"
    },
    {
      "key": "entityId",
      "value": "001"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Create ${{ values.entityName }}",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"${{ values.pkAttribute }}\": \"${{ values.entityName | upper }}#{{entityId}}\",\n  \"${{ values.skAttribute }}\": \"METADATA\",\n  \"name\": \"Test ${{ values.entityName }}\",\n  \"description\": \"${{ values.entityName }} created from Postman\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}${{ values.baseEndpoint }}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "customers"]
        }
      }
    },
    {
      "name": "Get All ${{ values.entityName }}s",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}${{ values.baseEndpoint }}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "customers"]
        }
      }
    },
    {
      "name": "Get ${{ values.entityName }} by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}${{ values.baseEndpoint }}/{{entityId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "customers", "{{entityId}}"]
        }
      }
    },
    {
      "name": "Update ${{ values.entityName }}",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Updated ${{ values.entityName }}\",\n  \"description\": \"${{ values.entityName }} updated from Postman\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}${{ values.baseEndpoint }}/{{entityId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "customers", "{{entityId}}"]
        }
      }
    },
    {
      "name": "Delete ${{ values.entityName }}",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}${{ values.baseEndpoint }}/{{entityId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "customers", "{{entityId}}"]
        }
      }
    }
  ]
}